# API Keys and Service Configuration
COHERE_API_KEY=your_cohere_api_key_here
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_URL=your_qdrant_cluster_url_here
NEON_DATABASE_URL=your_neon_postgres_connection_string_here

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# Optional Configuration
LOG_LEVEL=info
MAX_CONTENT_LENGTH=10000  # Maximum length of content chunks
CHUNK_SIZE=512  # Token size for content chunking
CHUNK_OVERLAP=128  # Overlap between content chunks
TOP_K=5  # Number of results to retrieve from vector search
SIMILARITY_THRESHOLD=0.5  # Minimum similarity threshold for retrieval